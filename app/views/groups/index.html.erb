<div class="col-md-12">
  <div class="group">
    <%= link_to("电影上线", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>电影名称</td>
        <td width="50%">简介</td>
        <td>发布者</td>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => "group_item", :collection => @groups, :as => :group %>
    </tbody>
  </table>
</div>
